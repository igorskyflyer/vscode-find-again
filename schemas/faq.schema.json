{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Find Again! Query Config",
    "description": "Defines a set of named search entries used by the Find Again! extension.",
    "properties": {
        "searches": {
            "type": "object",
            "description": "Named search entries; each key must be unique.",
            "propertyNames": {
                "type": "string",
                "minLength": 3,
                "maxLength": 32
            },
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "include": {
                        "type": "string",
                        "description": "Glob pattern defining which files to include.",
                        "minLength": 2,
                        "maxLength": 256
                    },
                    "exclude": {
                        "type": "string",
                        "description": "Glob pattern defining which files to exclude.",
                        "minLength": 2,
                        "maxLength": 256
                    },
                    "caseSensitive": {
                        "type": "boolean",
                        "description": "Whether the search should match case."
                    },
                    "regex": {
                        "type": "boolean",
                        "description": "Whether the query is a regular expression."
                    },
                    "query": {
                        "type": "string",
                        "description": "Optional search string or expression to match.",
                        "minLength": 1,
                        "maxLength": 128
                    },
                    "description": {
                        "type": "string",
                        "description": "Optional search description.",
                        "minLength": 3,
                        "maxLength": 128
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "required": ["searches"],
    "additionalProperties": false
}
