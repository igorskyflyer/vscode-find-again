{
    "name": "igordvlpr-find-again",
    "publisher": "igordvlpr",
    "displayName": "Find Again!",
    "version": "1.1.0",
    "description": "ðŸ”Ž Find Again! is a Visual Studio Code extension that lets you save and reuse your workspace's search queries. â³",
    "engines": {
        "vscode": "^1.101.0"
    },
    "categories": [
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.vscode/search.faq"
    ],
    "main": "dist/extension.js",
    "extensionKind": [
        "ui"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": true
        },
        "untrustedWorkspaces": {
            "supported": false
        }
    },
    "icon": "assets/extension.png",
    "galleryBanner": {
        "color": "#171D29",
        "theme": "dark"
    },
    "badges": [
        {
            "url": "https://img.shields.io/visual-studio-marketplace/v/igordvlpr.igordvlpr-find-again?style=flat-square",
            "href": "https://marketplace.visualstudio.com/items?itemName=igordvlpr.igordvlpr-find-again",
            "description": "The latest version of this extension"
        },
        {
            "url": "https://img.shields.io/visual-studio-marketplace/i/igordvlpr.igordvlpr-find-again?style=flat-square&color=%230AB242",
            "href": "https://marketplace.visualstudio.com/items?itemName=igordvlpr.igordvlpr-find-again",
            "description": "Number of installs for this extension"
        },
        {
            "url": "https://img.shields.io/visual-studio-marketplace/stars/igordvlpr.igordvlpr-find-again?style=flat-square&color=%236D0AB2",
            "href": "https://marketplace.visualstudio.com/items?itemName=igordvlpr.igordvlpr-find-again",
            "description": "Number of stars for this extension"
        }
    ],
    "contributes": {
        "configurationDefaults": {
            "[faq]": {
                "files.eol": "\n"
            }
        },
        "keybindings": [
            {
                "command": "extension.runSearchAll",
                "key": "CTRL+ALT+F",
                "when": "workspaceFolderCount > 0"
            }
        ],
        "commands": [
            {
                "category": "Find Again!",
                "command": "extension.runSearchAll",
                "title": "Run a Search...",
                "enablement": "workspaceFolderCount > 0"
            },
            {
                "category": "Find Again!",
                "command": "extension.createFaqFile",
                "title": "Create the Default .faq Search Index",
                "enablement": "workspaceFolderCount > 0"
            }
        ],
        "languages": [
            {
                "id": "json",
                "extensions": [
                    ".faq"
                ]
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": [
                    "*.faq"
                ],
                "url": "./schemas/faq.schema.json"
            }
        ]
    },
    "scripts": {
        "base": "esbuild src/extension.mts --bundle --outfile=dist/extension.js --format=cjs --platform=node --external:vscode --target=node22",
        "dev": "npm run -S base -- --sourcemap",
        "make": "npm run -S base -- --minify",
        "vscode:prepublish": "npm run make",
        "pkg": "vsce package",
        "pub": "vsce publish"
    },
    "keywords": [
        "search",
        "find",
        "find-again",
        "session",
        "project",
        "workspace",
        "vscode",
        "extension",
        "igorskyflyer",
        "igor.dvlpr"
    ],
    "license": "SEE LICENSE IN LICENSE.txt",
    "author": "Igor DimitrijeviÄ‡ <igor.dvlpr@gmail.com> (https://github.com/igorskyflyer)",
    "funding": "https://ko-fi.com/igorskyflyer",
    "sponsor": {
        "url": "https://ko-fi.com/igorskyflyer"
    },
    "pricing": "Free",
    "homepage": "https://github.com/igorskyflyer/vscode-find-again",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/igorskyflyer/vscode-find-again.git"
    },
    "bugs": {
        "url": "https://github.com/igorskyflyer/vscode-find-again/issues"
    },
    "dependencies": {
        "@igor.dvlpr/zep": "^6.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.1.2",
        "@igor.dvlpr/biome-config-igorskyflyer": "^2.0.1",
        "@types/node": "22.15.1",
        "@types/vscode": "1.101.0",
        "esbuild": "^0.25.8",
        "typescript": "^5.8.3"
    }
}
